@model HospitalProject.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>



<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.departmentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.departmentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.hospital)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hospital.hospitalName)
        </dd>
    </dl>
</div>


<h2>Doctors in this department</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.doctorsList.FirstOrDefault().doctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doctorsList.FirstOrDefault().firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doctorsList.FirstOrDefault().lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.doctorsList.FirstOrDefault().specialityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.doctorsList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.doctorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.specialityName)
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.departmentId">Edit</a> |
    <a asp-action="AddDoctor" asp-route-id="@Model.departmentId">Add Doctor to this department | </a>
    <a asp-action="Index">Back to List</a>
</div>
