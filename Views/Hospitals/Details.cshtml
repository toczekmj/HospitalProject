@model HospitalProject.Models.Hospital

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Hospital</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.hospitalName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.hospitalName)
        </dd>
    </dl>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.departmentList.FirstOrDefault().departmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.departmentList.FirstOrDefault().departmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.departmentList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.departmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departmentName)
            </td>
        </tr>
}
    </tbody>
</table>






<div>
    <a asp-action="Edit" asp-route-id="@Model.hospitalId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
