@model IEnumerable<HospitalProject.Models.Hospital>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.hospitalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hospitalName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.hospitalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hospitalName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.hospitalId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.hospitalId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.hospitalId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
